# Production Environment Variables
# Copy this file to .env and fill in your production values

# Security
SECRET_KEY=your-super-secure-secret-key-change-this
ENVIRONMENT=production

# Frontend Configuration
FRONTEND_HOST=https://your-domain.com
VITE_API_URL=https://your-domain.com/api/v1
VITE_APP_NAME=Pitt CSC Alumni Network
VITE_ENV=production

# Database Configuration (PostgreSQL for production)
POSTGRES_DB=alumni_db
POSTGRES_USER=alumni_user
POSTGRES_PASSWORD=your-secure-database-password
DATABASE_URL=postgresql://alumni_user:your-secure-database-password@database:5432/alumni_db

# Admin User Setup
FIRST_SUPERUSER=admin@pittcsc.org
FIRST_SUPERUSER_PASSWORD=your-admin-password
FIRST_SUPERUSER_NAME=Admin User

# Email Configuration (for password resets, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@pittcsc.org
EMAILS_FROM_NAME=Pitt CSC Alumni Network

# Optional: Error Tracking
SENTRY_DSN=your-sentry-dsn-if-using-sentry